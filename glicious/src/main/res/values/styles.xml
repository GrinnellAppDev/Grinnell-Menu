<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GTheme" parent="android:Theme.Light">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
    </style>
    
    <style name="RecipeTheme" parent="android:Theme.Black">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="Widget.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions">showHome|useLogo|showCustom</item>
        <item name="android:customNavigationLayout">@layout/action_bar_date</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>