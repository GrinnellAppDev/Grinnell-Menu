<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <edu.grinnell.glicious.CustomTextView
        android:id="@+id/namebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontName="Roboto-Regular.ttf"
        android:layout_gravity="left|center_vertical"
        android:text="Name"
        android:layout_margin="2dp"
        android:textColor="#424242"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <edu.grinnell.glicious.CustomTextView
        android:id="@+id/nutritionbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:fontName="Roboto-Thin.ttf"
        android:layout_weight="1"
        android:text="nutrition"
        android:textColor="#424242"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:layout_width="30dp"
        android:scaleType="fitCenter"
        android:background="@drawable/star_toggle"
        android:layout_height="30dp"
        android:id="@+id/fav_star"
        android:clickable="true"
        android:textOff=""
        android:textOn= ""
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical" />


</LinearLayout><!-- From: file:/Users/samee/Desktop/Grinnell-Menu/glicious/src/main/res/layout/entree_row.xml -->