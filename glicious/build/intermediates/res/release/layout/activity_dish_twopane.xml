<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".DishListActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/menu_pager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <android.support.v4.view.PagerTabStrip
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/gmdarkred" />
    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:id="@+id/dish_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:background="@color/gmlightred"/>

</LinearLayout><!-- From: file:/Users/samee/Desktop/Grinnell-Menu/glicious/src/main/res/layout/activity_dish_twopane.xml -->